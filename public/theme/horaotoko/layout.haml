!!! 5
%html{:lang => "ja"}
  %head
    %meta{:content => "application/xhtml+xml; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "text/css", "http-equiv" => "Content-Style-Type"}/
    %meta{:content => "text/javascript", "http-equiv" => "Content-Script-Type"}/
    - if entry?
      %title
        = @entry.title
        \- #{@site.title}
    - else
      %title= Fårikål
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "keywords"}/
    %link{:href => "/index.atom", :rel => "alternate", :title => @title, :type => "application/atom+xml"}/
    %link{:href => "horaotoko/style.css", :rel => "stylesheet", :type => "text/css"}/
  %body
    / header start
    %header
      .wrap
        %h1
          %a.head_logo{:href => "/"} Fårikål
        %p.catchcopy description
        %nav.gNav
          %ul
            %li
              %a{:href => "/"} home
            %li
              %a{:href => "/"} test
            %li
              %a{:href => "/"} test
    / header end
    / contents start
    #contents
      / pager start
      %nav.pager
        %ul
          %li
            %a{:href => "/1"} test
      / pager end
      / article start
      %article
        / date start
        .date
          %img{:src => "images/date.png"}/
          .date_contents
            %p.days 06/19
            %p.year ..2012
        / date end
        / a_contents start
        .article_contents
          / title start
          .title
            %h2
              %a{:href => "/1"} test post
          / title end
          / tags start
          .tags
            %p tags :
            %ul
              %li
                %a{:href => "/tags/lokka/"} Lokka
          / tags end
          / body start
          .body
            %p test
            %img.article_image{:src => "images/test.jpg"}
              %h3 test
              %p test
              %p test
              %p test
              %p.edit
                %a{:href => "/admin/post/1/edit"} 編集
          / body end
        / a_contents end
      / article end
      / side_bar start
      #side_bar
        / new start
        .new
          .side_header
            %h4 new entry
          .new_content
            %ul
              %li
                %a{:href => "/1"} test post
        / new end
        / past start
        .past
          .side_header
            %h4 archives
          .past_content
            %ul
              %li
                %a{:href => "/2012/06/"} 2012/06
        / past end
        / side_tags start
        .side_tags
          .side_header
            %h4 tags
          .side_tags_content
            %ul
              %li
                %a{:href => "/tags/lokka/"} Lokka
        / side_tags end
        / search start
        .search
          .side_header
            %h4 search
          .search_content
            %form{:action => "/search/", :method => "get"}
              %input.text_field{:name => "query", :type => "text"}/
              %button.submit{:onclick => "submit()"} Search
        / side_tags end
      / side_bar end
      / prev_next start
      .pn_wrap
        .prev
          %a{:href => "#"} prevpage
        .next
          %a{:href => "#"} nextpage
      / prev_next end
    / footer start
    %footer
      .wrap
        %p.copyright
          Copyright ©
          %a{:href => "/"} Fårikål
          2012 -  All Rights Reserved.
        %p.poweredby
          powered by
          %a{:href => "http://github.com/komagata/lokka"} Lokka
        %nav.control
          %ul
            %li
              %a{:href => "/admin/"} admin
            %li
              %a{:href => "/index.atom"} feed
    / footer end