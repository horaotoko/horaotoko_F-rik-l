.pager
    %div
      - if @posts.pager.previous_page
        %span.previous
          %a{:href => "?page=#{@posts.pager.previous_page}"} Newer
      - if @posts.pager.next_page
        %span.next
          %a{:href => "?page=#{@posts.pager.next_page}"} Older

%main
  - unless index?
    %h1.title= @title
  - @posts.each do |post|
    %article
      .date
        %img{:src => "#{@theme.path}/images/date.png"}
          .date_contents
            %p.month= post.created_at.strftime("%m")
            %p.days= post.created_at.day
            %p.year= post.created_at.year
      .article_contents
        - unless post.tags.size.zero?
          = post.tags_to_html
        - if logged_in?
          .edit
            %a{:href => post.edit_link}= t('edit')
        .title
          %h2
            %a{:href => post.link}= post.title
        .tags
          %p tags:
          %ul
            %li
              #{post.tags_to_html}
        .body
          = post.body
          - if logged_in?
            %a{:href => post.edit_link}= t('edit')
