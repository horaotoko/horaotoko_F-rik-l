%article
  .date
    %img{:src => "images/date.png"}/
      .date_contents
        %p.days= @entry.created_at.day
        %p.year= @entry.created_at.year
  .article_contents
    .title
      %h2= @entry.title
    .tags
      %p tags :
      %ul
        %li
          %a{:href => "/tags/lokka/"} Lokka
    .body
      = @entry.body
      - if logged_in?
        %p
        %a{:href => @entry.edit_link}= t('edit')